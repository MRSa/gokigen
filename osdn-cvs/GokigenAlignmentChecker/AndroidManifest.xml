<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="jp.sourceforge.gokigen.aligner"
      android:versionCode="1"
      android:versionName="0.01">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".Main"
                  android:screenOrientation="landscape"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CaptureScreen"
                  android:screenOrientation="landscape"
                  android:label="@string/captureScreen_name">
        </activity>
        <activity android:name=".Preference"
                  android:label="@string/preference_name"
                  android:theme="@style/Theme.CircleGoBG"
                  >
        </activity>
    </application>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-sdk android:minSdkVersion="4" />
</manifest> 