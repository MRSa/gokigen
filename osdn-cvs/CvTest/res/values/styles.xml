<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--  DemoKitから持ってきた -->
<style name="DemoKitTextBase" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">24dip</item>
    <item name="android:textColor">@color/DemoKitTextWhite</item>
    <item name="android:background">@null</item>
    <item name="android:includeFontPadding">false</item>
</style>
<style name="DemoKitNoDevice" parent="@style/DemoKitTextBase">
    <item name="android:textSize">30dip</item>
</style>
    
    
<!--  「ご」の背景を持つウィンドウ -->
<style name="Theme.CircleGoBG" parent="android:style/Theme">
    <item name="android:windowBackground">@drawable/circle_go</item>
</style>

<!-- アプリケーションのウィンドウタイトルのスタイルを設定する  -->
<style name="WindowTitle">  
    <item name="android:singleLine">true</item>
</style>

<!--  アプリケーションのスタイルを指定する -->
<style name="Theme.MemomaStyle" parent="@android:style/Theme.Holo">
    <item name="android:windowTitleStyle">@style/WindowTitle</item>
    <item name="android:windowBackground">@drawable/mybackground_color</item>
</style>

</resources>
